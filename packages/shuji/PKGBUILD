# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=shuji
pkgver=0.8.0
pkgrel=1
pkgdesc='Reverse engineering JavaScript and CSS sources from sourcemaps'
arch=('any')
groups=('blackarch' 'blackarch-reversing' 'blackarch-webapp')
url='https://github.com/paazmaya/shuji'
license=('MIT')
depends=('nodejs')
makedepends=('npm')
source=("https://github.com/paazmaya/shuji/archive/refs/tags/v0.8.0.tar.gz")
sha512sums=('SKIP')


package() {
  cd "$pkgname-$pkgver"

  _npmdir="$pkgdir/usr/lib/node_modules/"

  install -dm 755 "$_npmdir"

  cd "$_npmdir"

  npm install --user root -g --prefix "$pkgdir/usr" "$pkgname@"

  cd "$srcdir/$pkgname-$pkgver"

  # Only install license if required according to
  # https://wiki.archlinux.org/index.php/PKGBUILD#license
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

